{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "dotnet restore",
			"command": "dotnet restore",
			"group": "build",
			"problemMatcher": [
				"$msCompile"
			]
		},
		{
			"type": "shell",
			"label": "Build RenderMarkdownCli",
			"command": "dotnet build Misbah.sln",
			"group": "build",
			"dependsOn": "dotnet restore",
			"problemMatcher": [
				"$msCompile"
			]
		},
		{
			"type": "shell",
			"label": "build-blazor-desktop",
			"command": "dotnet build",
			"args": ["Misbah.BlazorDesktop"],
			"group": "build",
			"dependsOn": "dotnet restore",
			"problemMatcher": [
				"$msCompile"
			]
		},
		{
			"type": "shell",
			"label": "build-android",
			"command": "dotnet build",
			"args": ["Misbah.Android"],
			"group": "build",
			"dependsOn": "dotnet restore",
			"problemMatcher": [
				"$msCompile"
			]
		},
		{
			"label": "build-web",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/Misbah.Web/Misbah.Web.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"dependsOn": "dotnet restore",
			"problemMatcher": "$msCompile"
		},
		{
			"label": "build-desktop",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/Misbah.BlazorDesktop/Misbah.BlazorDesktop.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"dependsOn": "dotnet restore",
			"problemMatcher": "$msCompile"
		},
		{
			"label": "watch-web",
			"command": "dotnet",
			"type": "process",
			"args": [
				"watch",
				"run",
				"--project",
				"${workspaceFolder}/Misbah.Web/Misbah.Web.csproj"
			],
			"dependsOn": "dotnet restore",
			"problemMatcher": "$msCompile"
		}
	]
}