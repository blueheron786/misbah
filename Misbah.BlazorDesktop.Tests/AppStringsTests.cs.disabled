using Bunit;
using Misbah.BlazorDesktop.Components.Pages.Notes;
using Misbah.Core.Services;
using Microsoft.Extensions.DependencyInjection;
using NSubstitute;
using NUnit.Framework;

namespace Misbah.BlazorDesktop.Tests;

public class AppStringsTests
{
    [Test]
    public void AppStrings_Properties_Are_Accessible()
    {
        Assert.That(Misbah.BlazorDesktop.Resources.AppStrings.GitHubRepo, Is.Not.Null);
        Assert.That(Misbah.BlazorDesktop.Resources.AppStrings.WelcomeToMisbah, Is.Not.Null);
        Assert.That(Misbah.BlazorDesktop.Resources.AppStrings.NoHubLoaded, Is.Not.Null);
        Assert.That(Misbah.BlazorDesktop.Resources.AppStrings.LoadHub, Is.Not.Null);
        Assert.That(Misbah.BlazorDesktop.Resources.AppStrings.HideFolders, Is.Not.Null);
        Assert.That(Misbah.BlazorDesktop.Resources.AppStrings.ShowFolders, Is.Not.Null);
        Assert.That(Misbah.BlazorDesktop.Resources.AppStrings.Notes, Is.Not.Null);
        Assert.That(Misbah.BlazorDesktop.Resources.AppStrings.NoNotesFound, Is.Not.Null);
        Assert.That(Misbah.BlazorDesktop.Resources.AppStrings.Preview, Is.Not.Null);
        Assert.That(Misbah.BlazorDesktop.Resources.AppStrings.Edit, Is.Not.Null);
        Assert.That(Misbah.BlazorDesktop.Resources.AppStrings.Save, Is.Not.Null);
        Assert.That(Misbah.BlazorDesktop.Resources.AppStrings.SelectNoteToViewOrEdit, Is.Not.Null);
        Assert.That(Misbah.BlazorDesktop.Resources.AppStrings.NoFoldersFound, Is.Not.Null);
        Assert.That(Misbah.BlazorDesktop.Resources.AppStrings.Cancel, Is.Not.Null);
    }
}
