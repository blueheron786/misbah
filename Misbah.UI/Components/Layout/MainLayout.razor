@using Misbah.UI.Components
@using Misbah.UI.Components.Pages.Notes
@using Misbah.UI.Components
@using Misbah.UI.Resources
@inherits LayoutComponentBase

@code {
    private string? _libraryRoot;

    void OnLibrarySelected(string path)
    {
        _libraryRoot = path;
        StateHasChanged();
    }
}

<div class="page">
    @if (string.IsNullOrEmpty(_libraryRoot))
    {
        <main style="width:100vw; height:100vh; display:flex; align-items:center; justify-content:center; flex-direction:column;">
            <LibraryPicker OnLibraryPicked="OnLibrarySelected" />
        </main>
    }
    else
    {
        <div class="sidebar-panel">
            <FolderTree RootPath="@_libraryRoot" OnNoteSelected="EventCallback.Factory.Create<string>(this, _ => Task.CompletedTask)" />
        </div>
        <main>
            <div class="top-row px-4" style="display:flex;align-items:center;gap:1em;">
                <a href="https://github.com/blueheron786/misbah" target="_blank">@Misbah.UI.Resources.AppStrings.GitHubRepo</a>
            </div>
            <article class="content px-4">
                @Body
            </article>
        </main>
    }
</div>
