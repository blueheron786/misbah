@using Misbah.UI.Components
@using Misbah.UI.Components.Pages.Notes
@using Misbah.UI.Components
@using Misbah.UI.Resources
@inherits LayoutComponentBase

@code {
    private string? _libraryRoot;
    private string? _selectedNoteId;

    void OnLibrarySelected(string path)
    {
        _libraryRoot = path;
        _selectedNoteId = null;
        StateHasChanged();
    }

    async Task OnNoteSelected(string noteId)
    {
        _selectedNoteId = noteId;
        StateHasChanged();
    }
}

<div class="page">
    @if (string.IsNullOrEmpty(_libraryRoot))
    {
        <main style="width:100vw; height:100vh; display:flex; align-items:center; justify-content:center; flex-direction:column;">
            <LibraryPicker OnLibraryPicked="OnLibrarySelected" />
        </main>
    }
    else
    {
        <div class="sidebar-panel">
            <FolderTree RootPath="@_libraryRoot" OnNoteSelected="OnNoteSelected" />
        </div>
        <main>
            <!-- GitHub repo link removed -->
            <article class="content px-4">
                @if (!string.IsNullOrEmpty(_selectedNoteId))
                {
                    <Misbah.UI.Components.Pages.Notes.NoteView NoteId="@_selectedNoteId" />
                }
                else
                {
                    @Body
                }
            </article>
        </main>
    }
</div>
