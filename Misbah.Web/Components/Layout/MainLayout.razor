@namespace Misbah.Web.Components.Layout
@inherits LayoutComponentBase

@using Misbah.Core.Services
@using Misbah.Web.Components.Layout
@using Misbah.Web.Resources
@using Misbah.Web.Utils
@using Microsoft.JSInterop
@using System.IO

@using Misbah.Core.Utils
@using Misbah.Web.Components
@using Misbah.Web.Components.Pages
@using Misbah.Web.Components.Pages.Notes

@inject Misbah.Core.Services.INoteService NoteService
@inject Misbah.Core.Services.IGitSyncService GitSyncService
@inject IJSRuntime JS

<link rel="stylesheet" href="css/search-popup.css" />
<link rel="stylesheet" href="css/live-view-markdown.css" />
<script src="search-popup.js"></script>
<script src="js/splitter.js"></script>
<script src="js/live-view-markdown.js"></script>

@code {
    private string? _hubRoot;
    private string? _selectedNoteId;
    private static MainLayout? _instance;
    private bool _showSearchPopup = false;
    private bool _showCommandPanel = false;
    private CommandPanel? _commandPanelRef;

    // Static properties to expose current state to other components
    public static string? CurrentHubRoot => _instance?._hubRoot;
    public static string? CurrentSelectedNoteId => _instance?._selectedNoteId;

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            JS.InvokeVoidAsync("eval", @"
                window.addEventListener('misbah-nav', function(e) {
                    if (e.detail && e.detail.title) {
                        DotNet.invokeMethodAsync('Misbah.Web', 'NavigateToNoteByTitle', e.detail.title);
                    }
                });
                window.addEventListener('show-search-popup', function() {
                    DotNet.invokeMethodAsync('Misbah.Web', 'ShowSearchPopup');
                });
                window.addEventListener('keydown', function(e) {
                    if (e.ctrlKey && e.key === 'p') {
                        e.preventDefault();
                        DotNet.invokeMethodAsync('Misbah.Web', 'ShowCommandPanel');
                    }
                });
            ");
            // Initialize the splitter
            JS.InvokeVoidAsync("initializeSplitter");
        }
    }

    [JSInvokable("ShowSearchPopup")]
    public static void ShowSearchPopup()
    {
        if (_instance != null)
        {
            _instance._showSearchPopup = true;
            _instance._showCommandPanel = false;
            _instance.StateHasChanged();
        }
    }

    [JSInvokable("ShowCommandPanel")]
    public static void ShowCommandPanel()
    {
        if (_instance != null)
        {
            _instance._showCommandPanel = true;
            _instance._showSearchPopup = false;
            if (_instance._commandPanelRef != null)
            {
                _instance._commandPanelRef.OpenPanel();
            }
            _instance.StateHasChanged();
        }
    }

    void OnSearchPopupClose()
    {
        _showSearchPopup = false;
        StateHasChanged();
    }

    void OnCommandPanelClose()
    {
        _showCommandPanel = false;
        StateHasChanged();
    }

    void OnSearchNoteSelected(string noteId)
    {
        _selectedNoteId = noteId;
        _showSearchPopup = false;
        StateHasChanged();
    }

    protected override async Task OnInitializedAsync()
    {
        _instance = this;
        // Try to load last hub path from config
        var config = ConfigManager.Load();
        if (!string.IsNullOrEmpty(config.LastHubPath) && Directory.Exists(config.LastHubPath))
        {
            _hubRoot = config.LastHubPath;
            if (NoteService is Misbah.Core.Services.NoteService concrete)
            {
                concrete.SetRootPath(_hubRoot);
            }
            
            // Initialize GitSyncService for existing hub
            try
            {
                await GitSyncService.InitializeAsync(_hubRoot);
                await GitSyncService.StartAsync();
                Console.WriteLine($"✅ Git auto-sync started for existing hub: {_hubRoot}");
            }
            catch (Exception ex)
            {
                Console.WriteLine($"⚠️ Failed to start Git auto-sync for existing hub: {ex.Message}");
            }
        }
    }


    async void OnHubSelected(string path)
    {
        _hubRoot = path;
        _selectedNoteId = null;
        // Update NoteService root path if possible
        if (NoteService is Misbah.Core.Services.NoteService concrete)
        {
            concrete.SetRootPath(path);
        }
        
        // Initialize and start GitSyncService for the selected hub
        try
        {
            await GitSyncService.InitializeAsync(path);
            await GitSyncService.StartAsync();
            Console.WriteLine($"✅ Git auto-sync started for hub: {path}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"⚠️ Failed to start Git auto-sync: {ex.Message}");
        }
        
        // Save to config
        var config = ConfigManager.Load();
        config.LastHubPath = path;
        ConfigManager.Save(config);
        StateHasChanged();
    }

    void OnNoteSelected(string noteId)
    {
        _selectedNoteId = noteId;
        
        // Save to config
        var config = ConfigManager.Load();
        config.SelectedNoteId = noteId;
        ConfigManager.Save(config);
        StateHasChanged();
    }

    [JSInvokable("NavigateToNoteByTitle")]
    public static void NavigateToNoteByTitle(string title)
    {
        _instance?.NavigateToNoteByTitleInstance(title);
    }

    private void NavigateToNoteByTitleInstance(string title)
    {
        var note = NoteService.GetAllNotes().FirstOrDefault(n => n.Title == title);
        if (note != null)
        {
            _selectedNoteId = note.Id;
            StateHasChanged();
        }
    }
}

<div class="layout-container">
    @if (_showSearchPopup)
    {
        <SearchPopup OnNoteSelected="OnSearchNoteSelected" OnClose="OnSearchPopupClose" />
        <style>body { overflow: hidden !important; }</style>
    }
    @if (_showCommandPanel)
    {
        <CommandPanel @ref="_commandPanelRef" />
        <style>body { overflow: hidden !important; }</style>
    }
    @if (string.IsNullOrEmpty(_hubRoot))
    {
        <main style="flex:1 1 auto; display:flex; align-items:center; justify-content:center; flex-direction:column;">
            <HubPicker OnHubPicked="OnHubSelected" />
        </main>
    }
    else
    {
        <div class="sidebar-panel">
            <FolderTree RootPath="@_hubRoot" OnNoteSelected="OnNoteSelected" />
        </div>
        <div class="splitter"></div>
        <main class="main-content">
            <article class="content px-4" style="flex:1 1 auto; min-height:0;">
                @if (!string.IsNullOrEmpty(_selectedNoteId))
                {
                    <NoteView NoteId="@_selectedNoteId" />
                }
                else
                {
                    @Body
                }
            </article>
        </main>
    }
</div>
